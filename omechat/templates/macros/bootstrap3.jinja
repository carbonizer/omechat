{% macro navbar(elems, nav_id='top-navbar', cntr_class='container-fluid', brand_content='', brand_href='/') %}
  <nav id="{{ nav_id }}" class="navbar">
    <div class="{{ cntr_class }}">
      <div class="navbar-header">
        {# This is what is displayed when the nav collapses on small screens #}
        <button class="navbar-toggle" type="button"
                data-target="#{{ nav_id }}-collapse" data-toggle="collapse"
                aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        {% if brand_content %}
          <a href="#" class="navbar-brand">
            {{ brand_content|safe }}
          </a>
        {% endif %}
      </div>

      <div id="{{ nav_id }}-collapse" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          {% for elem in elems %}
            <li {% if elem.disabled %} class="disabled"{% elif elem.active %}
                                       class="active"{% endif %}>
              <a href="{{ elem.href }}"{% if 'target' in elem %}
                 target="{{ elem.target }}"
              {% endif %}>{{ elem.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </nav>
{% endmacro %}
